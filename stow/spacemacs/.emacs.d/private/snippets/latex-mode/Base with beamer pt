# -*- mode: snippet -*-
# name: Base with beamer pt
# key: base_beamer_pt
# --
\documentclass{beamer}
\usepackage[utf8]{inputenc}
\usepackage[brazilian]{babel}

\hypersetup{pdfpagemode=FullScreen}
\usetheme{Dresden}
\usecolortheme{beaver}
\setbeamertemplate{itemize items}[ball]

\title {$1} \subtitle{$2}
\author[Gabriel Henriques Siqueira] {Gabriel Henriques Siqueira}
\institute[Unicamp] {Universidade Estadual de Campinas}
\date {\today}

\AtBeginSection[]
{
  \begin{frame}
    \frametitle{}
    \tableofcontents[currentsection]
  \end{frame}
}

\begin{document}
    \frame{\titlepage}

    \begin{frame}{Roteiro}
    \tableofcontents
    \end{frame}

\section[$3]{$3}
    \begin{frame}
        \frametitle{$4}
		$0
    \end{frame}

\end{document}
endsnippet
